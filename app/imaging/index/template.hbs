{{#item-listing paginationProps=paginationProps }}
  {{#if hasRecords}}
    <table class="table">
      <tr class="table-header">
        <th class="col-xs-2">{{t 'models.imaging.labels.requestedDate'}}</th>
        <th class="col-xs-2">{{t 'models.imaging.labels.requestedBy'}}</th>
        <th class="col-xs-2">{{t 'models.imaging.labels.patient'}}</th>
        <th class="col-xs-2">{{t 'models.imaging.labels.imagingType'}}</th>
        <th class="col-xs-2">{{t 'models.imaging.labels.notes'}}</th>
        {{#if showActions}}
          <th class="col-xs-2">{{t 'labels.actions'}}</th>
        {{/if}}
      </tr>
      {{#each model as |imaging|}}
        {{imaging/index/requested-list-item
          imaging=imaging
          action="editItem"
          showActions=showActions
          canEdit=canEdit}}
      {{/each}}
    </table>
  {{else}}
    <div class="alert alert-info">
      <p>{{t 'messages.noItemsFound'}} {{#if canAdd}} <a href="#" {{action 'newItem'}}>{{t 'messages.createNewRecord'}}</a>{{/if}}</p>
    </div>
  {{/if}}
{{/item-listing}}
